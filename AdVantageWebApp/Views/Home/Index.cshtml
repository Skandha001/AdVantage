@model List<AdVantageWebApp.Models.AdModel>

@{
    ViewData["Title"] = "Home Page";
}

<div style="text-align: center; margin-bottom: 20px;">
    <h1 style="font-size: 2.5em; color: #333;">Welcome to AdVantage</h1>
    <p style="font-size: 1.2em; color: #666;">Available Ads:</p>
</div>

<div style="display: flex; flex-wrap: wrap; justify-content: center;">
    @foreach (var ad in Model)
    {
        <div style="width: 300px; margin: 10px; border: 1px solid #ddd; border-radius: 8px; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <img src="@ad.ImageUrl" alt="@ad.Title" style="width: 100%; height: 200px; object-fit: cover;">
            <div style="padding: 15px;">
                <h5 style="font-size: 1.5em; margin-bottom: 10px; color: #333;">@ad.Title</h5>
                <p style="font-size: 1em; color: #666; margin-bottom: 8px;">@ad.Description</p>
                <p style="font-size: 1em; color: #666; margin-bottom: 8px;">Type: @ad.Type</p>
                <p style="font-size: 1em; color: #666; margin-bottom: 15px;">Price: $@ad.Price</p>
                <a asp-action="BookAd" asp-route-id="@ad.Id" style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px;">Book Now</a>
            </div>
        </div>
    }
</div>