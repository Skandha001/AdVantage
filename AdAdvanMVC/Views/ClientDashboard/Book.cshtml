@model AdAdvanMVC.Models.ViewModelBooking

@{
    ViewData["Title"] = "Book";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Booking Adv</h1>

<hr />
<div class="row">
    
    <div class="col-md-8">
        
		<dl class="row">
			<dt class="col-sm-8">
				Adv ID: 
			</dt>
			<dd class="col-sm-8">
                @ViewBag.Ad.AdID
			</dd>

            <dt class="col-sm-8">
                Adv Type:
            </dt>
            <dd class="col-sm-8">
                @ViewBag.Ad.AdType
            </dd>

            <dt class="col-sm-8">
                Description:
            </dt>
            <dd class="col-sm-8">
				@ViewBag.Ad.Description
            </dd>

            <dt class="col-sm-8">
                Price Per Day / Issue:
            </dt>
            <dd class="col-sm-8">
				@ViewBag.Ad.PricePerDayOrOneIssue
            </dd>

            <dt class="col-sm-8">
                Price Unit:
            </dt>
            <dd class="col-sm-8">
                @ViewBag.Ad.PriceUnit
            </dd>
		</dl>
    </div>

    <div class="col-md-4">
        <h3>Are you sure you want to Book this?</h3>

        <form asp-action="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">.</label>
                <input type="submit" value="Book this Advertisement" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

